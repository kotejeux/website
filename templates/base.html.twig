<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta type="robots" content="noindex">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Kotéjeux
			{% endblock %}
		</title>
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Open+Sans&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&family=Roboto&display=swap" rel="stylesheet">
		<link href="{{ asset('css/error.css') }}" rel="stylesheet"/>
		<link href="{{ asset('css/style.css') }}" rel="stylesheet"/> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<div id="bloc_page">
				<header>
					<div id="main_title">
						<a href="{{ path('index') }}">
							<div class="logo">
								<img src="{{ asset('pictures/logo.png') }}" alt="Logo du KEJ"/>
							</div>
							<h1>Kotejeux</h1>
						</a>
					</div>
					<nav id="subtitle">
						{% if not is_granted("IS_AUTHENTICATED_FULLY") %}
							<a href="/login">Connexion</a>
						{% endif %}
						{% if is_granted("IS_AUTHENTICATED_FULLY") %}
							<p>
								Vous êtes connecté(e) en tant que
								<strong>{{ app.user.username }}</strong>
							</p>
							<a href="/logout">Déconnexion</a>
						{% endif %}
					</nav>
				</header>
				<nav id="sidebar">
					{% block sidebar %}
						<ul>
							<li>
								<a href="{{ path('index') }}">Home</a>
							</li>
							<li>
								<a href="{{ path('jeu') }}">Jeux</a>
							</li>
							<!--<li><a href="{{ path('editeur') }}">Éditeurs</a></li>-->
							{% if is_granted("ROLE_KEJ") %}
								<li>
									<a href="{{ path('location') }}">Locations</a>
								</li>
							{% endif %}
							<li>
								<a href="{{ path('blog_index') }}">Blog</a>
							</li>
							<li>
								<a href="{{ path('contact') }}">Contact</a>
							</li>
						</ul>
					{% endblock %}
				</nav>

				<div id="content"> {% block body %}{% endblock %}
					</div>

					<footer>
						{% block footer %}
							<a href="index">Page principale</a>
							<a href="about">À propos</a>
						{% endblock %}
					</footer>
				</div>
				{% block javascripts %}{% endblock %}
			</body>
		</html>
